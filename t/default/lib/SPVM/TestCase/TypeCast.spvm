  static method to_mulnum_type : int () {
    my $z_src : Complex_2d;
    $z_src->{re} = 1;
    $z_src->{im} = 2;
    
    my $z_dist = (Complex_2d)$z_src;
    
    unless ($z_dist->{re} == 1) {
      return 0;
    }
    
    unless ($z_dist->{im} == 2) {
      return 0;
    }
    
    return 1;
  }

  static method to_reference_type : int () {
