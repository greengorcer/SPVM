class TestCase::Errno {
  use Point;
  static method basic : int () {
    
    {
      set_errno -128;
      unless (errno == -128) {
        return 0;
      }
      
      set_errno class_id Point;
      
      unless (errno >= 0) {
        return 0;
      }
    }

    set_errno -2;
    
    my $default_errno = -128;
    eval {
      &foo(\$default_errno);
    };
    
    unless (errno == class_id Point) {
      return 0;
    }
    
    $@ = undef;
    
    return 1;
  }
  
  static method foo : int ($default_errno : int*) {
    my $errno = errno;
    
    $$default_errno = $errno;
    
    set_errno class_id Point;
    
    die;
  }
}
